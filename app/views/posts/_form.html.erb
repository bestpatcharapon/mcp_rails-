<style>
  .form-container {
    max-width: 600px;
  }

  .form-errors {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 4px;
    padding: 1rem 1.25rem;
    margin-bottom: 1.5rem;
  }

  .form-errors h2 {
    font-size: 0.9rem;
    font-weight: 500;
    color: #dc2626;
    margin-bottom: 0.5rem;
  }

  .form-errors ul {
    margin: 0;
    padding-left: 1.25rem;
    color: #dc2626;
    font-size: 0.85rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    font-size: 0.9rem;
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 0.5rem;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    background: #fff;
    color: #1a1a1a;
    transition: border-color 0.2s, box-shadow 0.2s;
    font-family: inherit;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: #1a1a1a;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.05);
  }

  .form-textarea {
    min-height: 150px;
    resize: vertical;
    line-height: 1.6;
  }

  .form-submit {
    display: inline-block;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 500;
    background: #1a1a1a;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.2s;
  }

  .form-submit:hover {
    background: #333;
  }
</style>

<div class="form-container">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div class="form-errors">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-input", placeholder: "Enter post title..." %>
    </div>

    <div class="form-group">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-input", placeholder: "Enter author name..." %>
    </div>

    <div class="form-group">
      <%= form.label :content, class: "form-label" %>
      <%= form.textarea :content, class: "form-textarea", placeholder: "Write your content here..." %>
    </div>

    <div class="form-group">
      <%= form.submit class: "form-submit" %>
    </div>
  <% end %>
</div>
