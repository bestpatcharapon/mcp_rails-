<% content_for :title, "Posts - MCP on Rails" %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: #000000;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #e7e9ea;
    line-height: 1.5;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header {
    position: sticky;
    top: 0;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(12px);
    padding: 1.25rem 0;
    border-bottom: 1px solid #2f3336;
    z-index: 100;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #e7e9ea;
  }

  .header p {
    font-size: 0.9rem;
    color: #71767b;
  }

  .notice {
    background: rgba(29, 155, 240, 0.1);
    border: 1px solid rgba(29, 155, 240, 0.3);
    color: #1d9bf0;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin: 1rem 0;
    font-size: 0.95rem;
  }

  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-bottom: 1px solid #2f3336;
  }

  .stats {
    display: flex;
    gap: 2rem;
  }

  .stat {
    font-size: 0.95rem;
  }

  .stat-value {
    font-weight: 700;
    color: #e7e9ea;
  }

  .stat-label {
    color: #71767b;
  }

  .compose-btn {
    background: #1d9bf0;
    color: #fff;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.95rem;
    cursor: pointer;
    transition: background 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .compose-btn:hover {
    background: #1a8cd8;
  }

  .feed {
    padding: 1rem 0;
  }

  .post-card {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    border: 1px solid #2f3336;
    border-radius: 12px;
    margin-bottom: 1rem;
    transition: background 0.2s, border-color 0.2s;
    text-decoration: none;
    color: inherit;
    background: rgba(255, 255, 255, 0.02);
  }

  .post-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: #404346;
  }

  .post-avatar {
    width: 48px;
    height: 48px;
    min-width: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #1d9bf0, #1a8cd8);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.1rem;
    color: #fff;
  }

  .post-body {
    flex: 1;
    min-width: 0;
  }

  .post-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .post-author {
    font-weight: 700;
    color: #e7e9ea;
    font-size: 1rem;
  }

  .post-handle {
    color: #71767b;
    font-size: 0.9rem;
  }

  .post-time {
    color: #71767b;
    font-size: 0.9rem;
  }

  .post-title {
    font-weight: 600;
    color: #e7e9ea;
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .post-text {
    color: #d6d9db;
    font-size: 0.95rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid #2f3336;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #71767b;
    background: none;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.9rem;
    text-decoration: none;
  }

  .action-btn:hover {
    color: #1d9bf0;
    background: rgba(29, 155, 240, 0.1);
  }

  .action-btn.danger:hover {
    color: #f91880;
    background: rgba(249, 24, 128, 0.1);
  }

  .action-icon {
    width: 18px;
    height: 18px;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #71767b;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #e7e9ea;
    margin-bottom: 0.5rem;
  }
</style>

<div class="header">
  <div class="header-content">
    <h1>Posts</h1>
    <p>MCP on Rails</p>
  </div>
</div>

<div class="container">
  <% if notice.present? %>
    <div class="notice"><%= notice %></div>
  <% end %>

  <div class="top-bar">
    <div class="stats">
      <div class="stat">
        <span class="stat-value"><%= @posts.count %></span>
        <span class="stat-label"> Posts</span>
      </div>
      <div class="stat">
        <span class="stat-value"><%= @posts.pluck(:author).uniq.count %></span>
        <span class="stat-label"> Authors</span>
      </div>
    </div>
    <%= link_to "＋ New Post", new_post_path, class: "compose-btn" %>
  </div>

  <% if @posts.any? %>
    <div class="feed">
      <% @posts.order(created_at: :desc).each do |post| %>
        <div class="post-card" id="<%= dom_id(post) %>">
          <div class="post-avatar"><%= post.author.to_s.first.upcase rescue "?" %></div>
          <div class="post-body">
            <div class="post-header">
              <span class="post-author"><%= post.author %></span>
              <span class="post-handle">@<%= post.author.to_s.downcase.gsub(' ', '_') %></span>
              <span class="post-time">· <%= time_ago_in_words(post.created_at) %></span>
            </div>
            <%= link_to post, style: "text-decoration: none; color: inherit;" do %>
              <div class="post-title"><%= post.title %></div>
              <div class="post-text"><%= post.content %></div>
            <% end %>
            <div class="post-actions">
              <%= link_to edit_post_path(post), class: "action-btn" do %>
                <svg class="action-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                </svg>
                Edit
              <% end %>
              <%= button_to post, method: :delete, class: "action-btn danger", data: { turbo_confirm: "Delete this post?" }, form: { style: "display: inline" } do %>
                <svg class="action-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h3>No posts yet</h3>
      <p>Create your first post to get started.</p>
    </div>
  <% end %>
</div>
